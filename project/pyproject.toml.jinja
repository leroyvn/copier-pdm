[build-system]
requires = ["pdm-pep517"]
build-backend = "pdm.pep517.api"

[project]
name = "{{ python_package_distribution_name }}"
description = "{{ project_description }}"
authors = [{name = "{{ author_fullname }}", email = "{{ author_email }}"}]
license = {file = "LICENSE"}
readme = "README.md"
requires-python = ">=3.7"
keywords = []
dynamic = ["version"]
classifiers = [
    "Development Status :: 3 - Alpha"
]
dependencies = []

[project.optional-dependencies]

[project.urls]
Homepage = "https://{{ repository_namespace }}.{{ repository_provider.rsplit('.', 1)[0] }}.io/{{ repository_name }}"
Documentation = "https://{{ repository_namespace }}.{{ repository_provider.rsplit('.', 1)[0] }}.io/{{ repository_name }}"
Changelog = "https://{{ repository_namespace }}.{{ repository_provider.rsplit('.', 1)[0] }}.io/{{ repository_name }}/changelog"
Repository = "https://{{ repository_provider }}/{{ repository_namespace }}/{{ repository_name }}"
Issues = "https://{{ repository_provider }}/{{ repository_namespace }}/{{ repository_name }}/issues"

[project.scripts]
{{ python_package_command_line_name }} = "{{ python_package_import_name }}.cli:main"

[tool.pdm]
version = {use_scm = true}
package-dir = "src"

[tool.pdm.dev-dependencies]
docs = [
    "sphinx>=4.0",
    "sphinx-autobuild>=2021.3",
    "furo>=2021.11",
    "myst-parser>=0.16",
    "sphinx-copybutton>=0.4",
]
format = [
    "autoflake>=1.4",
    "black>=22.1",
    "isort>=5.10",
]
maintain = []
quality = []
security = []
tests = [
    "pytest>=6.2",
    "pytest-xdist>=2.4",
    "pytest-cov>=3.0",
    "xdoctest>=0.15.0",
]
typing = []

[tool.black]
line-length = 88

[tool.isort]
line_length = 88
profile = "black"

[tool.conda-lock]
channels = ["conda-forge", "defaults"]

[tool.conda-lock.dependencies]
pip = "*"

[tool.coverage.run]
branch = true
parallel = true
source = [
  "src/",
]

[tool.coverage.paths]
equivalent = [
  "src/",
  "__pypackages__/",
]

[tool.coverage.report]
show_missing = true
skip_covered = true
omit = [
  "src/*/__init__.py",
  "src/*/__main__.py",
  "src/*/_version.py",
]
precision = 2

[tool.pytest.ini_options]
norecursedirs = [
  ".git",
  ".env",
  "dist",
  "build",
  "__pypackages__",
]
python_files = [
  "test_*.py",
  "*_test.py",
  "tests.py",
]
testpaths = [
  "tests",
]
